<Window x:Class="_6lab6.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_6lab6"
        mc:Ignorable="d"
        Title="AddWindow" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0">
            <Label Content="Введите название"/>
            <TextBox x:Name="NameMt"
                     Margin="20"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <Label Content="Введите высоту"/>
            <TextBox x:Name="HeightMt"
                     Margin="20"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="3"
                    HorizontalAlignment="Center">
            <Button Content="Добавить" Width="100" Margin="10 20" Click="Button_Click" />
            <Button Content="Отменить" Width="100" Margin="10 20" Click="Button_Click_1" />
        </StackPanel>
    </Grid>
</Window>

